
@{
    /**/

    Layout = null;
}


<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="stylesheet" type="text/css" href="../../Content/h-ui/css/H-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="../../Content/common.css" />
    <link rel="stylesheet" type="text/css" href="../../Content/iconfont/iconfont.css" />
    <title>请先登录</title>
    <style>
        html, body {
            height: 100%;
        }

        .loginBox1 {
            width: 50%;
            margin-left: 25%;
        }
    </style>
</head>
<body class="y_average">
    <div style="height:100px"></div>
    <div class="loginBox1">
        <div class="form form-horizontal">
            <div class="row cl">
                <label class="form-label col-xs-3">用户名</label>
                <div class="formControls col-xs-8">
                    <input id="username" type="text" placeholder="账户" class="input-text size-L" />
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-3">密码</label>
                <div class="formControls col-xs-8">
                    <input id="password" type="password" placeholder="密码" class="input-text size-L" />
                </div>
            </div>
            <div class="row cl">
                <div class="formControls col-xs-8 col-xs-offset-3">
                    <div class="btn btn-success radius size-L pl-30 pr-30" onclick="login()">
                        &nbsp;登&nbsp;&nbsp;&nbsp;&nbsp;录&nbsp;
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="average"></div>
    <div class="mt-25 mb-30 text-c">Copyright&nbsp;&nbsp;&nbsp;&nbsp;正十七科技&nbsp;&nbsp;&nbsp;&nbsp;admin v3.1</div>
    <script type="text/javascript" src="../../Content/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="../../Content/layer/2.4/layer.js"></script>
    <script type="text/javascript" src="../../Content/h-ui/js/H-ui.min.js"></script>
    <script type="text/javascript" src="../../Content/h-ui.admin/js/H-ui.admin.js"></script>
    <script type="text/javascript">
        function login() {
            var username = $('#username').val();
            var password = $('#password').val();
            if ("" == username || "" == password) {
                layer.msg('用户名密码不能为空', { icon: 5, time: 1500 });
                return;
            }
            $.ajax({
                "url": "/login/LoginCheck",
                "type": "GET",
                "dataType": "json",
                "data": {
                    "username": username,
                    "password": password
                }
            }).done(function (ret) {
                //success body
                if (ret == 1)
                    location.href = "/main/main"
                else
                    layer.msg('用户名密码错误', { icon: 5, time: 1500 });
            }).fail(function (header, status, errorThrown) {
                //fail body
            })
        }
    </script>
</body>
</html>
